        ["eating"],
        ["grimace"],
        ["sad"],
        ["screamOpen"],
        ["serious"],
        ["smile"],
        ["tongue"],
        ["twinkle"],
        ["vomit"]
      ]
    },
    "nose": {
      "type": "array",
      "items": { "type": "string", "enum": ["default"] },
      "default": ["default"],
      "examples": [["default"]]
    }
  },
  "additionalProperties": false
}
