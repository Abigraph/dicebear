{
  "title": "Options",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "eyes": {
      "title": "Eyes",
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["open", "sleep", "wink", "glasses", "happy", "sunglasses"]
      },
      "default": ["open", "sleep", "wink", "glasses", "happy", "sunglasses"]
    },
    "hair": {
      "title": "Hair",
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "long",
          "sideShave",
          "shortCombover",
          "curlyHighTop",
          "bobCut",
          "curly",
          "pigtails",
          "curlyBun",
          "buzzcut",
          "bobBangs",
          "bald",
          "balding",
          "cap",
          "bunUndercut",
          "fade",
          "beanie",
          "straightBun",
          "extraLong",
          "shortComboverChops",
          "mohawk"
        ]
      },
      "default": [
        "long",
        "sideShave",
        "shortCombover",
        "curlyHighTop",
        "bobCut",
        "curly",
        "pigtails",
        "curlyBun",
        "buzzcut",
        "bobBangs",
        "bald",
        "balding",
        "cap",
        "bunUndercut",
        "fade",
        "beanie",
        "straightBun",
        "extraLong",
        "shortComboverChops",
        "mohawk"
      ]
    },
    "body": {
      "title": "Body",
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["squared", "rounded", "small", "checkered"]
      },
      "default": ["squared", "rounded", "small", "checkered"]
    },
    "mouth": {
      "title": "Mouth",
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["smile", "frown", "surprise", "pacifier", "bigSmile", "smirk", "lips"]
      },
      "default": ["smile", "frown", "surprise", "pacifier", "bigSmile", "smirk", "lips"]
    },
    "nose": {
      "title": "Nose",
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["mediumRound", "smallRound", "wrinkles"]
      },
      "default": ["mediumRound", "smallRound", "wrinkles"]
    },
    "facialHair": {
      "title": "Facial Hair",
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["beardMustache", "pyramid", "walrus", "goatee", "shadow", "soulPatch"]
      },
      "default": ["beardMustache", "pyramid", "walrus", "goatee", "shadow", "soulPatch"]
    },
    "hairColor": {
      "title": "Hair Color",
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string",
            "enum": ["black", "brunette", "red", "pink", "copper", "blonde", "grey"]
          },
          {
            "$ref": "https://dicebear.com/schema/v4.json#/definitions/color"
          }
        ]
      },
      "default": ["black", "brunette", "red", "pink", "copper", "blonde", "grey"]
    },
    "clothingColor": {
      "title": "Clothing Color",
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string",
            "enum": ["blue", "turquoise", "purple", "green", "red", "yellow", "pink"]
          },
          {
            "$ref": "https://dicebear.com/schema/v4.json#/definitions/color"
          }
        ]
      },
      "default": ["blue", "turquoise", "purple", "green", "red", "yellow", "pink"]
    },
    "skinColor": {
      "title": "Skin Color",
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string",
            "enum": ["tone1", "tone2", "tone3", "tone4", "tone5", "tone6", "tone7", "tone8"]
          },
          {
            "$ref": "https://dicebear.com/schema/v4.json#/definitions/color"
          }
        ]
      },
      "default": ["tone1", "tone2", "tone3", "tone4", "tone5", "tone6", "tone7", "tone8"]
    }
  },
  "additionalProperties": false
}
