          },
          {
            "type": "string",
            "enum": [
              "amber",
              "blue",
              "cyan",
              "deepOrange",
              "deepPurple",
              "green",
              "indigo",
              "lightBlue",
              "lightGreen",
              "lime",
              "orange",
              "pink",
              "purple",
              "red",
              "teal",
              "yellow"
            ]
          }
        ]
      },
      "default": [
        "amber",
        "blue",
        "cyan",
        "deepOrange",
        "deepPurple",
        "green",
        "indigo",
        "lightBlue",
