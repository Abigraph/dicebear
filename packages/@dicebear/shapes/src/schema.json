        "enum": ["none", "lightGray", "gray", "lighten"]
      },
      "default": ["none", "lightGray", "gray", "lighten"]
    },
    "centerWrapper": {
      "type": "array",
      "uniqueItems": true,
      "items": { "type": "string", "enum": ["default"] },
