{
  "title": "Options",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "margin": {
      "type": "integer",
      "minimum": 0,
      "maximum": 25
    },
    "background": {
      "oneOf": [
        {
          "$ref": "https://dicebear.com/schema/v4.json#/definitions/color"
        },
        {
          "type": "string",
          "enum": ["transparent"]
        }
      ]
    },
    "backgroundColors": {
      "type": "array",
      "items": {
        "$ref": "https://dicebear.com/schema/v4.json#/definitions/colorCollection"
      }
    },
    "backgroundColorLevel": {
      "$ref": "https://dicebear.com/schema/v4.json#/definitions/colorCollectionLevel"
    },
    "fontSize": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100
    },
    "chars": {
      "type": "number",
      "minimum": 0,
      "maximum": 2
    },
    "bold": {
      "type": ["boolean", "number"]
    }
  },
  "additionalProperties": false
}
