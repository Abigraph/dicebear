{
  "title": "Options",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "properties": {
    "backgroundColors": {
      "type": "array",
      "items": {
        "$ref": "https://dicebear.com/schema/v4.json#/definitions/colorCollection"
      }
    },
    "backgroundColorLevel": {
      "$ref": "https://dicebear.com/schema/v4.json#/definitions/colorCollectionLevel",
      "default": 600
    },
    "fontSize": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "default": 50
    },
    "chars": {
      "type": "number",
      "minimum": 0,
      "maximum": 2,
      "default": 2
    },
    "bold": {
      "type": "boolean"
    }
  },
  "additionalProperties": false
}
